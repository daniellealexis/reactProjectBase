@require 'variables';

html, body {
    font-size: 18px;
    height: 100%;
    margin: 0;
    font-family: Arial, sans-serif;
}

h1 {
    font-size: 1.5rem;
    padding: 1rem 0;
    margin: 0;
}

button {
    border: 0;
    padding: 0.5rem;
    background-color: $mainColor;
    border-radius: 3px;
    color: #fff;
}

.wrapper {
    padding: 1rem;
}
